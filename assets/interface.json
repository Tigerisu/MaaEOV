{
    "controller": [
        {
            "name": "ADB 默认方式",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服(默认界面)",
            "path": [
                "{PROJECT_DIR}/resource/base"
            ]
        }
    ],
    "agent": {
        "child_exec": "{PROJECT_DIR}/python/python.exe",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "启动游戏",
            "entry": "#StartUp",
            "option": [
                "放弃未完成的战斗"
            ]
        },
        {
            "name": "市区巡逻",
            "entry": "#UrbanPatrol"
        },
        {
            "name": "领取奖励",
            "entry": "#CollectRewards",
            "option": [
                "签收全部邮件"
            ]
        },
        {
            "name": "退出游戏",
            "entry": "#ShutDown"
        }
    ],
    "option": {
        "放弃未完成的战斗": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {}
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "_DiscardUnfinishedGame": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "签收全部邮件": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {}
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "Mailbox": {
                            "enabled": true
                        }
                    }
                }
            ]
        }
    }
}