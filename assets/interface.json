{
    "controller": [
        {
            "name": "ADB 默认方式",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服(默认界面)",
            "path": [
                "{PROJECT_DIR}/resource/base"
            ]
        }
    ],
    "agent": {
        "child_exec": "{PROJECT_DIR}/python/python.exe",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "启动游戏",
            "entry": "#StartUp",
            "option": [
                "放弃未完成的战斗"
            ]
        },
        {
            "name": "事务所（解读仪式）",
            "entry": "#TheRoom",
            "option": [
                "解读仪式偏好",
                "分解剩余护符"
            ]
        },
        {
            "name": "市区巡逻",
            "entry": "#UrbanPatrol"
        },
        {
            "name": "领取奖励",
            "entry": "#CollectRewards",
            "option": [
                "签收全部邮件"
            ]
        },
        {
            "name": "退出游戏",
            "entry": "#ShutDown"
        }
    ],
    "option": {
        "放弃未完成的战斗": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {
                        "_DiscardUnfinishedGame": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "_DiscardUnfinishedGame": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "签收全部邮件": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {
                        "Mailbox": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "Mailbox": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "解读仪式偏好": {
            "cases": [
                {
                    "name": "行动资金",
                    "pipeline_override": {
                        "RitualRewardSelect": {
                            "next": [
                                "RitualRewardFund"
                            ]
                        }
                    }
                },
                {
                    "name": "思维加速磁带（探员经验）",
                    "pipeline_override": {
                        "RitualRewardSelect": {
                            "next": [
                                "RitualRewardTape"
                            ]
                        }
                    }
                },
                {
                    "name": "原星砂（心锚经验）",
                    "pipeline_override": {
                        "RitualRewardSelect": {
                            "next": [
                                "RitualRewardDust"
                            ]
                        }
                    }
                },
                {
                    "name": "异化样本（材料）",
                    "pipeline_override": {
                        "RitualRewardSelect": {
                            "next": [
                                "RitualRewardSample"
                            ]
                        }
                    }
                }
            ]
        },
        "分解剩余护符": {
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {
                        "SellAmulet": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "SellAmulet": {
                            "enabled": true
                        }
                    }
                }
            ]
        }
    }
}